<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.futurenet.sorisoopbackend.member.domain.MemberRepository">
    <insert id="saveMember" parameterType="com.futurenet.sorisoopbackend.member.dto.request.SignupRequest"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">
        INSERT INTO member (email, password, name, birth)
        VALUES (#{request.email}, #{request.password}, #{request.name}, #{request.birth})
    </insert>

    <insert id="saveOAuthMember" parameterType="com.futurenet.sorisoopbackend.member.dto.request.OAuthSignupRequest"
            useGeneratedKeys="true"
            keyProperty="id"
            keyColumn="id">
        INSERT INTO member (email, provider)
        VALUES(#{request.email}, #{request.provider})
    </insert>

    <select id="getMemberByEmail" resultType="com.futurenet.sorisoopbackend.member.dto.response.FindMemberResponse">
        SELECT id, email, provider, password
        FROM member
        WHERE email = #{email}
    </select>

    <select id="getCustomerKeyByMemberId" parameterType="long" resultType="string">
        SELECT customer_key
        FROM member
        WHERE id = #{memberId}
    </select>

    <update id="updateCustomerKey">
        UPDATE member
        SET customer_key = #{customerKey},
        updated_at = SYSDATE,
        updated_by = #{memberId}
        WHERE id = #{memberId}
    </update>
</mapper>